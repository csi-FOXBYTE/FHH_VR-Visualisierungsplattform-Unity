/* Project wide*/

/* Tokens or “USS variables” */
:root {
    /* --app-font: resource("HamburgSans-Regular SDF"); */
    --app-font: resource("Arial SDF");
    --app-color-primary: #003063; /*blue*/
    --app-color-primary-contrast: #ffffff;
    --app-color-secondary: #E10018; /*red*/
    --app-color-tertiary: rgba(255, 255, 255, 0.8);
    --app-color-quaternary: rgba(255, 255, 255, 0);
    --app-color-menu-item: #6B86A3;
    --app-color-menu-item-hover: #879BB0;
    --app-color-menu-item-bright: #DDDDDD;
    --app-color-menu-item-bright-hover: #E4E4E4;
    --app-color-menu-background: #D4D4D4;
    --app-color-border: #001F38;
    --app-color-text: #111111;
    --app-font-size: 14px;
    --app-pad: 10px;
    --app-pad-sm: 10px;
    --app-radius: 12px;
}

/* Surfaces */
.app-background0 { background-color: var(--app-color-quaternary); } /* fully transparent; for future changes */
.app-background1 { background-color: var(--app-color-primary); }
.app-background2 { background-color: var(--app-color-secondary); }
.app-background3 { background-color: var(--app-color-tertiary); }

/* Typo / global */
* {
    -unity-font-definition: var(--app-font);
    color: var(--app-color-text);
    -unity-font-style: normal;
    font-size: var(--app-font-size);
}

/* Buttons */
.btn {
    padding-left: var(--app-pad);
    padding-right: var(--app-pad);
    padding-top: var(--app-pad-sm);
    padding-bottom: var(--app-pad-sm);
    border-radius: var(--app-radius);
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
}

.btn-primary {
    background-color: var(--app-color-primary-contrast);
    color: var(--app-color-text);
}

/* Simple utilities */
.row { flex-direction: row; display: flex; }
.col { flex-direction: column; display: flex; }
.center { align-items: center; justify-content: center; }


